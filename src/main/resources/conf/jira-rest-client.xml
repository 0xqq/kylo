<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans.xsd">


    <bean id="jiraRestClientConfig" class="com.thinkbiganalytics.jira.JiraRestClientConfig">
        <property name="apiPath" value="${jira.apiPath:/rest/api/latest/}"/>
        <property name="host" value="${jira.host:NOT_SET}"/>
        <property name="username" value="${jira.username:username}"/>
        <property name="password" value="${jira.password:password}" />
        <property name="keystorePath" value="${jira.keystorePath:/keystore}" />
        <property name="keystorePassword" value="${jira.keystorePassword:password}" />
        <property name="https" value="${jira.https:false}"/>
        <property name="keystoreOnClasspath" value="${jira.keystoreOnClasspath:false}"/>
    </bean>

    <bean id="jiraClient" class="com.thinkbiganalytics.jira.JiraJerseyClient">
        <constructor-arg  ref="jiraRestClientConfig"/>
    </bean>

</beans>