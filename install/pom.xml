<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <parent>
    <artifactId>thinkbig-data-lake-accelerator</artifactId>
    <groupId>com.thinkbiganalytics.datalake</groupId>
    <version>0.1.0-SNAPSHOT</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <artifactId>install</artifactId>
  <properties>
    <start-class-thinkbig-nifi-ui>com.thinkbiganalytics.app.Application</start-class-thinkbig-nifi-ui>
    <start-class-thinkbig-hive>com.thinkbiganalytics.hive.server.Application</start-class-thinkbig-hive>
    <!-- override using property -Drpm.install.dir -->
    <rpm.install.dir>/opt/thinkbig</rpm.install.dir>
    <rpm.scripts.path>src/main/scripts</rpm.scripts.path>
    <!-- override using property -Drpm.log.dir -->
    <rpm.log.dir>/var/log</rpm.log.dir>
    <!-- override using property -Drpm.user -->
    <rpm.user>thinkbig</rpm.user>
  </properties>
  <build>
    <plugins>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>rpm-maven-plugin</artifactId>
        <version>2.1.5</version>
        <executions>
          <execution>
            <id>generate-rpm</id>
            <goals>
              <goal>rpm</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <name>thinkbig-datalake-accelerator</name>
          <license>Think Big 2015</license>
          <distribution>Think Big 2015</distribution>
          <group>com.thinkbiganalytics</group>
          <icon></icon>
          <packager>Think Big</packager>
          <defineStatements>
            <defineStatement>_unpackaged_files_terminate_build 0</defineStatement>
          </defineStatements>
          <needarch>noarch</needarch>
          <targetOS>linux</targetOS>
          <mappings>
            <!--  mappings -->
            <mapping>
              <directory>${rpm.install.dir}/thinkbig-ui</directory>
              <filemode>644</filemode>
              <username>${rpm.user}</username>
              <groupname>${rpm.user}</groupname>
              <sources>
                <source>
                  <location>../ui/ui-app/target/thinkbig-ui-app-${project.version}-distribution.tar.gz</location>
                </source>
              </sources>
            </mapping>
            <mapping>
              <directory>${rpm.install.dir}/thinkbig-ui/lib</directory>
              <filemode>644</filemode>
              <username>${rpm.user}</username>
              <groupname>${rpm.user}</groupname>
              <sources>
                <source>
                  <location>
                    ../ui/ui-app/target/thinkbig-ui-app-${project.version}.jar
                  </location>
                </source>
              </sources>
            </mapping>
            <mapping>
              <directory>${rpm.install.dir}/thinkbig-ui/conf</directory>
              <filemode>644</filemode>
              <username>${rpm.user}</username>
              <groupname>${rpm.user}</groupname>
              <sources>
                <source>
                  <location>
                    ../ui/ui-app/src/main/resources/application.properties
                  </location>
                </source>
                <source>
                  <location>
                    ../ui/ui-app/src/main/resources/application-context.xml
                  </location>
                </source>
                <source>
                  <location>
                    ../ui/ui-app/src/main/config/rpm-build/log4j.properties
                  </location>
                </source>
              </sources>
            </mapping>
            <mapping>
              <directory>${rpm.install.dir}/thinkbig-ui/bin</directory>
              <filemode>644</filemode>
              <username>${rpm.user}</username>
              <groupname>${rpm.user}</groupname>
            </mapping>

            <!-- thinkbig services mappings -->
            <mapping>
              <directory>${rpm.install.dir}/thinkbig-services</directory>
              <filemode>644</filemode>
              <username>${rpm.user}</username>
              <groupname>${rpm.user}</groupname>
              <sources>
                <source>
                  <location>../services/service-app/target/thinkbig-service-app-${project.version}-distribution.tar.gz</location>
                </source>
              </sources>
            </mapping>
            <mapping>
              <directory>${rpm.install.dir}/thinkbig-services/lib</directory>
              <filemode>644</filemode>
              <username>${rpm.user}</username>
              <groupname>${rpm.user}</groupname>
              <sources>
                <source>
                  <location>
                    ../services/service-app/target/thinkbig-service-app-${project.version}.jar
                  </location>
                </source>
              </sources>
            </mapping>
            <mapping>
              <directory>${rpm.install.dir}/thinkbig-services/conf</directory>
              <filemode>644</filemode>
              <username>${rpm.user}</username>
              <groupname>${rpm.user}</groupname>
              <sources>
                <source>
                  <location>
                    ../services/service-app/src/main/resources/application.properties
                  </location>
                </source>
                <source>
                  <location>
                    ../services/service-app/src/main/resources/application-context.xml
                  </location>
                </source>
                <source>
                  <location>
                    ../services/service-app/src/main/config/rpm-build/log4j.properties
                  </location>
                </source>
              </sources>
            </mapping>
            <mapping>
              <directory>${rpm.install.dir}/thinkbig-services/bin</directory>
              <filemode>644</filemode>
              <username>${rpm.user}</username>
              <groupname>${rpm.user}</groupname>
            </mapping>
            <mapping>
              <directory>${rpm.install.dir}/thinkbig-services/plugin</directory>
              <filemode>644</filemode>
              <username>${rpm.user}</username>
              <groupname>${rpm.user}</groupname>
            </mapping>
            <mapping>
              <directory>${rpm.install.dir}/thinkbig-services/plugin/conf</directory>
              <filemode>644</filemode>
              <username>${rpm.user}</username>
              <groupname>${rpm.user}</groupname>
            </mapping>
            <!-- thinkbig spark shell mappings -->
            <mapping>
              <directory>${rpm.install.dir}/thinkbig-spark-shell</directory>
              <filemode>644</filemode>
              <username>${rpm.user}</username>
              <groupname>${rpm.user}</groupname>
              <sources>
                <source>
                  <location>../services/spark-shell-service/target/thinkbig-spark-shell-service-${project.version}-distribution.tar.gz</location>
                </source>
              </sources>
            </mapping>
            <mapping>
              <directory>${rpm.install.dir}/thinkbig-spark-shell</directory>
              <filemode>644</filemode>
              <username>${rpm.user}</username>
              <groupname>${rpm.user}</groupname>
              <sources>
                <source>
                  <location>
                    ../services/spark-shell-service/target/thinkbig-spark-shell-service-${project.version}.jar
                  </location>
                </source>
              </sources>
            </mapping>
            <mapping>
              <directory>${rpm.install.dir}/thinkbig-spark-shell/bin</directory>
              <filemode>644</filemode>
              <username>${rpm.user}</username>
              <groupname>${rpm.user}</groupname>
            </mapping>

            <!-- Conf/Setup -->
            <mapping>
              <directory>${rpm.install.dir}/setup/nifi</directory>
              <filemode>744</filemode>
              <username>${rpm.user}</username>
              <groupname>${rpm.user}</groupname>
              <sources>
                <source>
                  <location>./setup/nifi</location>
                  <includes>
                    <include>logback.xml</include>
                    <include>bootstrap.conf</include>
                    <include>nifi.properties</include>
                    <include>nifi</include>
                    <include>install-nifi.sh</include>
                    <include>install-thinkbig-components.sh</include>
                  </includes>
                </source>
                <source>
                  <location>../integrations/nifi/nifi-nar-bundles/nifi-provenance-repo-bundle/nifi-provenance-repo/src/main/resources</location>
                  <includes>
                    <include>config.properties</include>
                  </includes>
                </source>
                <source>
                  <location>../integrations/nifi/nifi-nar-bundles/nifi-core-bundle/nifi-core-nar/target</location>
                  <includes>
                    <include>thinkbig-nifi-core-nar-${project.version}.nar</include>
                  </includes>
                </source>
                <source>
                  <location>../integrations/nifi/nifi-nar-bundles/nifi-elasticsearch-bundle/nifi-elasticsearch-nar/target</location>
                  <includes>
                    <include>thinkbig-nifi-elasticsearch-nar-${project.version}.nar</include>
                  </includes>
                </source>
                <source>
                  <location>../integrations/nifi/nifi-nar-bundles/nifi-hadoop-bundle/nifi-hadoop-bundle-nar/target</location>
                  <includes>
                    <include>thinkbig-nifi-hadoop-nar-${project.version}.nar</include>
                  </includes>
                </source>
                <source>
                  <location>../integrations/nifi/nifi-nar-bundles/nifi-provenance-repo-bundle/nifi-provenance-repo-nar/target</location>
                  <includes>
                    <include>thinkbig-nifi-provenance-repo-nar-${project.version}.nar</include>
                  </includes>
                </source>
                <source>
                  <location>../integrations/nifi/nifi-nar-bundles/nifi-spark-bundle/nifi-spark-nar/target</location>
                  <includes>
                    <include>thinkbig-nifi-spark-nar-${project.version}.nar</include>
                  </includes>
                </source>
                <source>
                  <location>../integrations/nifi/nifi-nar-bundles/nifi-standard-services/nifi-core-service-bundle/nifi-core-service-nar/target</location>
                  <includes>
                    <include>thinkbig-nifi-core-service-nar-${project.version}.nar</include>
                  </includes>
                </source>
                <source>
                  <location>../integrations/nifi/nifi-nar-bundles/nifi-standard-services/nifi-hadoop-service-bundle/nifi-hadoop-service-nar/target</location>
                  <includes>
                    <include>thinkbig-nifi-hadoop-service-nar-${project.version}.nar</include>
                  </includes>
                </source>
                <source>
                  <location>../integrations/nifi/nifi-nar-bundles/nifi-standard-services/nifi-standard-services-nar/target</location>
                  <includes>
                    <include>thinkbig-nifi-standard-services-nar-${project.version}.nar</include>
                  </includes>
                </source>
                <source>
                  <location>../integrations/spark/spark-job-profiler/target</location>
                  <includes>
                    <include>thinkbig-spark-job-profiler-${project.version}-jar-with-dependencies.jar</include>
                  </includes>
                </source>
                <source>
                  <location>../integrations/spark/spark-validate-cleanse/target</location>
                  <includes>
                    <include>thinkbig-spark-validate-cleanse-${project.version}-jar-with-dependencies.jar</include>
                  </includes>
                </source>
                <source>
                  <location>../integrations/spark/spark-interpreter/target</location>
                  <includes>
                    <include>thinkbig-spark-interpreter-${project.version}-jar-with-dependencies.jar</include>
                  </includes>
                </source>
              </sources>
            </mapping>
            <mapping>
                <directory>${rpm.install.dir}/setup/sql</directory>
                <filemode>744</filemode>
                <username>${rpm.user}</username>
                <groupname>${rpm.user}</groupname>
                <sources>
                    <source>
                        <location>setup/sql</location>
                    </source>
                </sources>
            </mapping>
            <mapping>
              <directory>${rpm.install.dir}/setup/data</directory>
              <filemode>744</filemode>
              <username>${rpm.user}</username>
              <groupname>${rpm.user}</groupname>
              <sources>
                <source>
                  <location>setup/data</location>
                </source>
              </sources>
            </mapping>
           <!--mapping>
              <directory>${rpm.install.dir}/setup/local_packages</directory>
              <filemode>744</filemode>
              <username>${rpm.user}</username>
              <groupname>${rpm.user}</groupname>
              <sources>
                <source>
                  <location>setup/local_packages</location>
                </source>
              </sources>
            </mapping-->
            <mapping>
              <directory>${rpm.install.dir}/setup/activemq</directory>
              <filemode>744</filemode>
              <username>${rpm.user}</username>
              <groupname>${rpm.user}</groupname>
              <sources>
                <source>
                  <location>setup/activemq</location>
                </source>
              </sources>
            </mapping>
            <mapping>
              <directory>${rpm.install.dir}/setup/elasticsearch</directory>
              <filemode>744</filemode>
              <username>${rpm.user}</username>
              <groupname>${rpm.user}</groupname>
              <sources>
                <source>
                  <location>setup/elasticsearch</location>
                </source>
              </sources>
            </mapping>
            <mapping>
              <directory>${rpm.install.dir}/setup</directory>
              <filemode>744</filemode>
              <username>${rpm.user}</username>
              <groupname>${rpm.user}</groupname>
              <sources>
                <source>
                  <location>setup</location>
                  <includes>
                    <include>setup-wizard.sh</include>
                  </includes>
                </source>
              </sources>
            </mapping>
            <mapping>
              <directory>${rpm.install.dir}</directory>
              <filemode>744</filemode>
              <username>${rpm.user}</username>
              <groupname>${rpm.user}</groupname>
              <sources>
                <source>
                  <location>setup</location>
                  <includes>
                    <include>start-thinkbig-apps.sh</include>
                    <include>stop-thinkbig-apps.sh</include>
                  </includes>
                </source>
              </sources>
            </mapping>
            <mapping>
              <directory>${rpm.install.dir}/setup/dev</directory>
              <filemode>744</filemode>
              <username>${rpm.user}</username>
              <groupname>${rpm.user}</groupname>
              <sources>
                <source>
                  <location>setup/dev</location>
                </source>
              </sources>
            </mapping>
          </mappings>
          <preinstallScriptlet>
            <scriptFile>${rpm.scripts.path}/pre-install.sh</scriptFile>
          </preinstallScriptlet>
          <postinstallScriptlet>
            <scriptFile>${rpm.scripts.path}/post-install.sh</scriptFile>
          </postinstallScriptlet>
          <preremoveScriptlet>
            <scriptFile>${rpm.scripts.path}/pre-remove.sh</scriptFile>
          </preremoveScriptlet>
          <postremoveScriptlet>
            <scriptFile>${rpm.scripts.path}/post-remove.sh</scriptFile>
          </postremoveScriptlet>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>