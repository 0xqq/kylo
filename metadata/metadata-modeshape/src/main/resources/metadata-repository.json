{
    "name" : "metadata-repository",
    "workspaces" : {
        "predefined" : ["metadata"],
        "default" : "default",
        "allowCreation" : true
    },
    "security" : {
        "anonymous" : {
            "roles" : ["readonly","readwrite","admin"],
            "useOnFailedLogin" : false
        }
    },
    "storage" : {
        "persistence" : {
            "type" : "db",
            "connectionUrl": "jdbc:mysql://localhost:3306/metadata",
            "driver": "com.mysql.jdbc.Driver",
            "username": "root",
            "createOnStart" : true,
            "dropOnExit" : true
        },
        "binaryStorage" : {
            "type" : "file",
            "directory": "target/content/binaries",
            "minimumBinarySizeInBytes" : 999
        }
    }
}