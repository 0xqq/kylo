{
    "name" : "metadata-repository",
    "node-types" : ["metadata-schema.cnd"],
    "workspaces" : {
        "predefined" : ["metadata"],
        "default" : "default",
        "allowCreation" : true
    },
    "security" : {
        "anonymous" : {
            "roles" : ["readonly","readwrite","admin"],
            "useOnFailedLogin" : false
        }
    },
    "node-types" : ["metadata-schema.cnd"],
    "storage" : {
        "persistence" : {
            "type" : "db",
            "connectionUrl": "jdbc:mysql://localhost:3306/thinkbig",
            "driver": "com.mysql.jdbc.Driver",
            "username": "root",
            "createOnStart" : true,
            "dropOnExit" : true
        },
        "binaryStorage" : {
            "type" : "file",
            "directory": "/var/thinkbig/modeshape",
            "minimumBinarySizeInBytes" : 5000000
        }
    },
    "garbageCollection" : {
        "initialTime": "17:00"
    }
}