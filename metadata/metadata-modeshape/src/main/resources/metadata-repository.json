{
    "name" : "metadata-repository",
    "node-types" : ["metadata-schema.cnd"],
    "workspaces" : {
        "predefined" : ["metadata"],
        "default" : "default",
        "allowCreation" : true
    },
    "security" : {
        "anonymous" : {
            "username" : "<anonymous>",
            "roles" : ["readonly"],
            "useOnFailedLogin" : false
        },
        "providers" : [
            {
                "name" : "Spring Security-Based Provider",
                "classname" : "com.thinkbiganalytics.metadata.modeshape.auth.SpringAuthenticationProvider",
            },
            {
                "name" : "DB Admin Provider",
                "classname" : "com.thinkbiganalytics.metadata.modeshape.auth.AdminAuthenticationProvider",
            }
        ]
    },
    "node-types" : ["metadata-schema.cnd"],
    "storage" : {
        "persistence" : {
            "type" : "db",
            "connectionUrl": "jdbc:mysql://localhost:3306/thinkbig",
            "driver": "com.mysql.jdbc.Driver",
            "username": "root",
            "password": "",
            "createOnStart" : true,
            "dropOnExit" : false
        },
        "binaryStorage" : {
            "type" : "file",
            "directory": "/var/thinkbig/modeshape",
            "minimumBinarySizeInBytes" : 5000000
        }
    },
    "garbageCollection" : {
        "initialTime": "17:00"
    }
}