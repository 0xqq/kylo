<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <packaging>jar</packaging>

    <artifactId>thinkbig-ui-common</artifactId>

    <parent>
        <artifactId>thinkbig-ui</artifactId>
        <groupId>com.thinkbiganalytics.datalake</groupId>
        <version>0.6.0-SNAPSHOT</version>
        <relativePath>../pom.xml</relativePath>
    </parent>

    <dependencies>
        <dependency>
            <groupId>org.springframework</groupId>
            <artifactId>spring-webmvc</artifactId>
            <version>${spring.version}</version>
        </dependency>

        <dependency>
            <groupId>org.springframework</groupId>
            <artifactId>spring-core</artifactId>
        </dependency>

    </dependencies>

    <build>
        <plugins>

            <plugin>
                <groupId>com.samaxes.maven</groupId>
                <artifactId>minify-maven-plugin</artifactId>
                <version>1.7.4</version>
                <executions>
                    <execution>
                        <id>default-minify</id>
                        <phase>validate</phase>
                        <goals>
                            <goal>minify</goal>
                        </goals>
                        <configuration>
                            <webappSourceDir>${project.basedir}/src/main/resources/static-common</webappSourceDir>
                            <jsSourceDir>js</jsSourceDir>
                            <webappTargetDir>${project.basedir}/src/main/resources/static-common</webappTargetDir>
                            <skipMinify>true</skipMinify>
                            <jsEngine>CLOSURE</jsEngine>
                            <jsFinalFile>datalake-ui-common.js</jsFinalFile>
                            <jsTargetDir>js/min/</jsTargetDir>
                            <!-- <cssSourceFiles>
                                <cssSourceFile>file-1.css</cssSourceFile>
                                ...
                                <cssSourceFile>file-n.css</cssSourceFile>
                            </cssSourceFiles>-->
                            <jsSourceFiles>
                                <jsSourceFile>app.js</jsSourceFile>
                            </jsSourceFiles>
                            <jsSourceIncludes>
                                <jsSourceInclude>templates.js</jsSourceInclude>
                                <jsSourceInclude>services/**.js</jsSourceInclude>
                                <jsSourceInclude>shared/*.js</jsSourceInclude>
                                <jsSourceInclude>shared/**/*.js</jsSourceInclude>
                                <jsSourceInclude>utils/**.js</jsSourceInclude>
                            </jsSourceIncludes>
                            <jsSourceExcludes>
                                <jsSourceExclude>**/*.min.js</jsSourceExclude>
                            </jsSourceExcludes>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <artifactId>maven-resources-plugin</artifactId>
                <version>2.7</version>
                <executions>
                    <execution>
                        <id>copy-resources</id>
                        <phase>validate</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${project.basedir}/src/main/resources/META-INF/resources/webjars/thinkbig-ui-common/js/vendor</outputDirectory>
                            <resources>
                                <resource>
                                    <directory>${basedir}/src/main/resources/static/js/vendor</directory>
                                </resource>
                            </resources>
                        </configuration>
                    </execution>
                </executions>
            </plugin>


        </plugins>
    </build>
</project>
